<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAnimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_marginTop="3dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageAnimal"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/cat_pic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                app:riv_corner_radius="@dimen/_8sdp"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_gravity="center">


                <TextView
                    android:id="@+id/nameAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lilia"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/primary2"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/descAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female, 5 Months"
                    android:textColor="@color/dark_one"
                    android:layout_marginStart="5dp"
                    android:textSize="@dimen/_8ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_location"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/locAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casablanca"
                    android:textColor="@color/dark_one"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>