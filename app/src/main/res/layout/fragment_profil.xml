<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_profil">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#42919191"
        android:layout_marginTop="5dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_profil_blue"
                android:layout_marginLeft="25dp"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/background_profile_more"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_suivant"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:id="@+id/imgProfile"
                />
        </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#F4F4F4"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_localisation_blue"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_profile_more"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Address"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/imgAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_suivant"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#F4F4F4"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_notifications_blue"
            android:layout_marginLeft="25dp"
            android:textSize="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_profile_more"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_suivant"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:id="@+id/TxtNoti"
            />
    </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#F4F4F4"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_exit"
            android:layout_marginLeft="25dp"
            android:textSize="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_profile_more"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/imgLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_suivant"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

