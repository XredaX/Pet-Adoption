<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHome"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_pet1"
                android:text="  Adopt a Friend"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginRight="-25dp"
                android:padding="10dp"
                android:src="@drawable/notifi" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/round_dark_back_bleu5"
                android:drawableLeft="@drawable/ic_search"
                android:hint="Search..."
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/filterBtn1"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:paddingRight="25dp"
                app:srcCompat="@drawable/ic_filter" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/back_home">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:padding="15dp"
                    android:text="Pet Adoption\nMade Easy"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/white_bg"
                    android:text="Adopt Now"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/cat" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="-5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Categories"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:text="View all"
                android:textColor="@color/primary2"
                android:textSize="15dp" />


        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="-17dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/catCategory"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="43dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/cat_back"
                    android:drawableStart="@drawable/cat1"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:text="Cat"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="43dp"
                    android:text="Dog"
                    android:gravity="center"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:drawableStart="@drawable/dog"
                    android:background="@drawable/dog_back"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="43dp"
                    android:text="Parrot"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/parrot"
                    android:background="@drawable/parrot_back"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="43dp"
                    android:text="Parrot"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/parrot"
                    android:background="@drawable/parrot_back"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>


        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-29dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Recommended"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:text="View all"
                android:textColor="@color/primary2"
                android:textSize="15dp"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</ScrollView>